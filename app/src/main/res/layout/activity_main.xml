<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/bgSolidColour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDAB17"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="346dp"
        android:layout_height="547dp"
        app:layout_constraintBottom_toBottomOf="@+id/bgSolidColour"
        app:layout_constraintEnd_toEndOf="@+id/bgSolidColour"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgSolidColour"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_pickup" />

    <Button
        android:id="@+id/bStartButton"
        android:layout_width="109dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:text="GO"
        app:layout_constraintBottom_toBottomOf="@+id/bgSolidColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgSolidColour"
        app:layout_constraintVertical_bias="0.828"
        android:textColor= "#FFFFFF"
        android:background="@drawable/custom_button"/>

    <EditText
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="472dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="John Doe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>